      // Button to Open the Modal
      button.btn.btn-primary(type='button', data-toggle='modal', data-target='#myModal')
        | +Add Ingredient
    // The Modal
    #myModal.modal.fade
      .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            h4.modal-title &#xE40;&#xE1E;&#xE34;&#xE48;&#xE21;&#xE23;&#xE32;&#xE22;&#xE01;&#xE32;&#xE23;&#xE40;&#xE21;&#xE19;&#xE39;&#xE02;&#xE2D;&#xE07;&#xE2B;&#xE27;&#xE32;&#xE19;
            |               
            button.close(type='button', data-dismiss='modal') &times;
          // Modal body
          .modal-body
            form(class="form-add" method="POST" action="/authmenu/menu")
              .form-group
                label(for='name') Name:
                |                   
                input(type="text" name="name" id="name" class="form-control" placeholder="NAME" required)
              |                 
              .form-group
                label(for='detail') Price:
                |    
                input(type="text" name="detail" id="detail" class="form-control" placeholder="Detail of Menu" required)               
              |                 
              .form-group
                label(for='price') Price:
                |                   
                input(type="number" min='1' max='1000' value='0' name="price" id="price" class="form-control" placeholder="price" required)
              |                 
              .form-group
                label(for='amount') Amount:
                |                   
                input(type="number" min='1' max='1000' value='0' name="amount" id="amount" class="form-control" placeholder="Amount" required)
              |                 
              .form-group
                label(for='Atopping') Topping:
                |                   
                input(type="text" name="a1" id="topping1" class="form-control" placeholder="Topping #1" required)
                br
                |                   
                input(type="text" name="a2" id="topping2" class="form-control" placeholder="Topping #2" required)
                br
                |                   
                input(type="text" name="a3" id="topping3" class="form-control" placeholder="Topping #3" required)
              |                 
              .form-group
                input.form-control-file.border(type='file', name='file')
              |                 
              |               
              |               
              button.btn.btn-primary(type='submit', value='submit') Submit
          // Modal footer
